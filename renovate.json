{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>sanity-io/renovate-presets//ecosystem/auto",
    "github>sanity-io/renovate-presets//ecosystem/studio-v3",
    ":reviewer(team:ecosystem)"
  ],
  "packageRules": [
    {
      "extends": [":semanticCommitTypeAll(chore)"],
      "description": "Group all dependencies from the app directory",
      "matchPaths": ["apps/**", "packages/ui"],
      "groupName": "App dependencies"
    }
  ]
}
